{
  "TgTranslator": {
    "CharLimit": 850,
    "BanTime": 180
  },
  "Telegram": {
    "Polling": false,
    "BotToken": "Bot token. Get it at @BotFather"
  },
  "ConnectionStrings" : {
    "TgTranslatorContext" : "Host=127.0.0.1;Database=tgtranslator;Username=postgres;Password=***"
  },
  "HelpMenu" : {
    "VideoUrl" : ""
  },
  "Kestrel" : {
    "Endpoints" : {
      "https4" : {
        "Url" : "http://127.0.0.1:443"
      }
    }
  },
  "Prometheus": {
    "Login" : "",
    "Password": ""
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u4}] {SourceContext} {Message}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Warning"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/Log-.txt",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u4}] {SourceContext} {Message}{NewLine}{Exception}",
          "fileSizeLimitBytes": 1073741824,
          "retainedFileCountLimit": 62,
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "restrictedToMinimumLevel": "Error"
        }
      }
    ]
  }
}